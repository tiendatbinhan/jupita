<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/gray_900">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/REG"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Icon"
        android:src="@drawable/icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"/>
       
    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/UN"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Icon"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        tools:textSize="20sp"
        android:hint="Username"
        android:background="@color/gray_300"

        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/UN"
        android:id="@+id/PW"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        tools:textSize="20sp"
        android:hint="Password"
        android:background="@color/gray_300"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/CPW"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PW"
        android:layout_marginRight="30dp"
        android:background="@color/gray_300"
        android:layout_marginLeft="30dp"
        android:hint="Confirm Password"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/Email"
        app:layout_constraintTop_toBottomOf="@id/CPW"
        android:hint="Email (not required)"
        android:textSize="20sp"
        android:background="@color/gray_300"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/Email"
        android:text="I agree with "
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/CB"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TERM"
        android:text="Terms of Use"
        android:clickable="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/CB"
        app:layout_constraintTop_toBottomOf="@id/Email"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="05dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SU"
        android:text="Register"
        app:layout_constraintTop_toBottomOf="@id/CB"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/pink_A700"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SI"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/pink_A700"
        app:layout_constraintLeft_toLeftOf="parent
"
        android:text="Log in"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>